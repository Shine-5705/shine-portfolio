---
import style from '../../assets/styles/Hero.module.scss';
import heroImage from '../../assets/images/heroImage.png';
import { Image } from 'astro:assets';
import { gsap } from 'gsap';
import { ScrollTrigger } from 'gsap/ScrollTrigger';

gsap.registerPlugin(ScrollTrigger);

if (typeof window !== 'undefined') {
  document.addEventListener('DOMContentLoaded', () => {
    const tl = gsap.timeline({ defaults: { overwrite: 'auto' } });

    tl.from('.hero-name', { 
      duration: 1.2, 
      y: 100, 
      opacity: 0, 
      ease: 'power3.out' 
    })
    .from('.hero-lastname', { 
      duration: 1.2, 
      y: 100, 
      opacity: 0, 
      ease: 'power3.out' 
    }, '-=0.8')
    .from('.subtitle-text, .subtitle-highlight', { 
      duration: 0.8, 
      y: 50, 
      opacity: 0, 
      stagger: 0.2, 
      ease: 'power2.out' 
    }, '-=0.6')
    .from('.floating-card', { 
      duration: 1, 
      scale: 0, 
      rotation: 15, 
      opacity: 0, 
      stagger: 0.15, 
      ease: 'back.out(1.7)' 
    }, '-=1')
    .from('.hero-bottom', { 
      duration: 0.8, 
      y: 50, 
      opacity: 0, 
      ease: 'power2.out' 
    }, '-=0.4');

    const floatAnimations = [
      { target: '.card-1', y: -20, duration: 3, delay: 0 },
      { target: '.card-2', y: -15, duration: 4, delay: 0.5 },
      { target: '.card-3', y: -25, duration: 3.5, delay: 1 },
      { target: '.card-4', y: -18, duration: 3.8, delay: 1.5 },
      { target: '.card-5', y: -22, duration: 3.2, delay: 2 },
      { target: '.card-6', y: -16, duration: 3.6, delay: 2.5 }
    ];

    floatAnimations.forEach(anim => {
      gsap.to(anim.target, { 
        y: anim.y, 
        duration: anim.duration, 
        ease: 'power1.inOut', 
        yoyo: true, 
        repeat: -1, 
        delay: anim.delay 
      });
    });

    gsap.to('.hero-image', {
      yPercent: -30,
      ease: 'none',
      scrollTrigger: {
        trigger: `.${style.heroContainer}`,
        start: 'top bottom',
        end: 'bottom top',
        scrub: 1,
        invalidateOnRefresh: true
      }
    });
  });
}
